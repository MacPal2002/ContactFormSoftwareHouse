<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechSolutions</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .nav-link-active {
            color: #2563eb; 
            border-bottom: 2px solid #2563eb;
            font-weight: 600;
        }

        .hero-bg {
            background-image: linear-gradient(to right, rgba(0, 0, 50, 0.7), rgba(0, 0, 100, 0.5)), url('https://placehold.co/1920x1080/334155/e2e8f0?text=Nowoczesne+Rozwiązania+IT');
            background-size: cover;
            background-position: center;
        }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800">
    <header class="bg-white shadow-md sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-blue-600 hover:text-blue-700">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-auto inline-block mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2.25 2.25 0 00-2.242-2.242H6.814a2.25 2.25 0 00-2.242 2.242v.001M19.428 15.428L16.9 12.9M6.814 15.428L9.342 12.9m3.586 6.186L12 21M12 3v3.862m0 0a2.25 2.25 0 01-2.25 2.25H6.814a2.25 2.25 0 01-2.242-2.242V6.75M12 6.862a2.25 2.25 0 002.25-2.25h2.936a2.25 2.25 0 002.242 2.242v.001M12 6.862V3m0 18v-3.862" />
                    </svg>
                    TechSolutions
                </a>
            </div>
            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
            }
            <div class="flex items-center space-x-2">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors duration-150 @(currentController == "Home" && currentAction == "Index" ? "nav-link-active" : "")">Strona Główna</a>
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors duration-150 @(currentController == "Home" && currentAction == "Services" ? "nav-link-active" : "")">Usługi</a>
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors duration-150 @(currentController == "Home" && currentAction == "Projects" ? "nav-link-active" : "")">Projekty</a>
                <a asp-area="" asp-controller="Contact" asp-action="Index"
                   class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors duration-150 @(currentController == "Contact" && currentAction == "Index" ? "nav-link-active" : "")">Kontakt</a>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-16">
        @RenderBody()
    </main>

    <footer class="bg-gray-800 text-white py-12">
        <div class="container mx-auto px-6 text-center">
            <p>&copy; @DateTime.Now.Year - TechSolutions - Wszelkie prawa zastrzeżone.</p>
            <p class="text-sm text-gray-400 mt-2">Tworzymy przyszłość technologii, linijka po linijce.</p>
            <div class="mt-4">
                <a href="#" class="text-gray-400 hover:text-white mx-2">Facebook</a>
                <a href="#" class="text-gray-400 hover:text-white mx-2">LinkedIn</a>
                <a href="#" class="text-gray-400 hover:text-white mx-2">GitHub</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>