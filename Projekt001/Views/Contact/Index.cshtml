@model Projekt001.Models.ContactModel
@{
    ViewData["Title"] = "Skontaktuj się z Nami";
}

<div class="bg-gray-50 py-12 md:py-20">
    <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto bg-white p-8 md:p-12 rounded-xl shadow-2xl">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2 text-center">@ViewData["Title"]</h1>
            <p class="text-gray-600 mb-8 text-center">Masz pytania lub chcesz omówić projekt? Wypełnij formularz poniżej.</p>

            <form asp-controller="Contact" asp-action="Index" method="post" class="space-y-6">
                @Html.AntiForgeryToken() <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">Ups! Coś poszło nie tak.</strong>
                    <span class="block sm:inline">Proszę poprawić wskazane błędy.</span>
                </div>

                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Name" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="np. Jan Kowalski" />
                    <span asp-validation-for="Name" class="mt-1 text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Email" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="np. jan.kowalski@example.com" />
                    <span asp-validation-for="Email" class="mt-1 text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Message" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <textarea asp-for="Message" rows="5" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Twoja wiadomość..."></textarea>
                    <span asp-validation-for="Message" class="mt-1 text-xs text-red-600"></span>
                </div>

                <div class="text-center pt-4">
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-150 ease-in-out w-full md:w-auto">Wyślij Wiadomość</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }