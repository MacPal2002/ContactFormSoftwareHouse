@{
    ViewData["Title"] = "Wiadomość Wysłana!";
}

<div class="bg-gray-50 py-12 md:py-20">
    <div class="container mx-auto px-6">
        <div class="max-w-2xl mx-auto bg-white p-8 md:p-12 rounded-xl shadow-2xl text-center">
            <div class="text-green-500 mb-6">
                <svg xmlns="[http://www.w3.org/2000/svg](http://www.w3.org/2000/svg)" class="h-20 w-20 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">@ViewData["Title"]</h1>

            @if (TempData["SuccessMessage"] != null)
            {
                <p class="text-gray-600 text-lg mb-8">@TempData["SuccessMessage"]</p>
            }
            else
            {
                <p class="text-gray-600 text-lg mb-8">Twoja wiadomość została pomyślnie przekazana. Skontaktujemy się z Tobą wkrótce.</p>
            }

            <div class="mt-8">
                <a asp-controller="Home" asp-action="Index" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-150 ease-in-out inline-block">Wróć na Stronę Główną</a>
            </div>
        </div>
    </div>
</div>